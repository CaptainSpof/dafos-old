# Theme
colorscheme base16-oceanicnext

# Open urls
unbind t
unbind T
unbind w
unbind <C-f>

keybind C H
keybind c h
keybind R L
keybind r l
keybind S K
keybind s k
keybind T J
keybind t j
keybind è t

bind é fillcmdline recontain
bind O fillcmdline tabopen
bind W tabdetach
bind ge current_url tabopen
bind yt tabduplicate

# Git{Hub,Lab} git clone via SSH yank
bind yg composite js "git clone " + document.location.href.replace(/https?:\/\//,"git@").replace("/",":").replace(/\/?$/,".git") | clipboard yank

# Navigation
bind C back
bind R forward
bind T tabprev
bind S tabnext

# Scrolling
bind t scrollline 2
bind s scrollline -2
set smoothscroll = true
set scrollduration = 10

# Vim search mode
bind / fillcmdline find
bind ? fillcmdline find -?
bind n findnext 1
bind N findnext -1
bind ,<Space> nohlsearch
bind <C-g> nohlsearch

# detach tabs
bind gd tabdetach
bind gD composite tabduplicate; tabdetach

# Misc
set hindelay = 100
set relatedopenpos = last
set tabopenpos = last
set modeindicator false

# Search
set searchurls.n https://search.nixos.org/packages?query=
set searchurls.no https://search.nixos.org/options?query=
set searchurls.nw https://nixos.wiki/index.php?search=
